<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loSimulationResult"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lgsdiamond.blackjackstudio.ActivityStudio">

    <ProgressBar
        android:id="@+id/pbAutoRun"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/loSimulationResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitleSimulatorResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center"
            android:text="Simulation Result"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/ivSimulationResultReset"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/ivSimulationResultContinue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_continue" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRuleTextSimulatorResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RuleText"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/lvSimulatorResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="true" />
</LinearLayout>