<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loRowHandDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingTop="0dp"
    tools:context=".ActivityStudio">

    <FrameLayout
        android:id="@+id/loHandCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCutCard"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="83dp"
            android:background="#b43232" />

        <ImageView
            android:id="@+id/ivRowCard0"
            android:layout_width="60dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/ivRowCard1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/loHandResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/tvRowHandMessage"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvRowHandScore"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRowHandMessage"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:text="Score"
            android:textColor="#7878ff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvRowHandResult"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRowHandScore"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Result"
            android:textColor="#000000"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cbRowInsurance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRowHandResult"
            android:checked="false"
            android:text="Insurance"
            android:textColor="#006400"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>