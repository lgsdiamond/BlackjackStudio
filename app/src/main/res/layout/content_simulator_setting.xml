<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loSimulationSetting"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lgsdiamond.blackjackstudio.ActivityStudio">

    <RelativeLayout
        android:id="@+id/loSimulationSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleSimulationSetting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center"
            android:text="Setting for Simulation"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/ivSimulationCancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/ivSimulationRun"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@id/ivSimulationRun"
            android:src="@drawable/ic_run" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvRuleTextSimulatorSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff0f0"
        android:padding="2dp"
        android:text="Rules"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#001e64"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/lvSimulatorSetting"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true" />
</LinearLayout>
